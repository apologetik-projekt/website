{
  "name": "apologetik-projekt-website",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "pnpm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "remix build && run-p dev:*",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public -b $(cat .env) --compatibility-date=2023-10-30",
    "dev:css": "pnpm run generate:css -- --watch",
    "dev:remix": "remix watch",
    "generate:css": "pnpx tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler"
  },
  "dependencies": {
    "@cassiozen/usestatemachine": "^1.0.1",
    "@next-boost/hybrid-disk-cache": "^0.3.0",
    "@remix-run/cloudflare": "2.5.0",
    "@remix-run/cloudflare-pages": "2.5.0",
    "@remix-run/react": "2.5.0",
    "clsx": "^2.1.0",
    "framer-motion": "^10.16.16",
    "isbot": "^4.4.0",
    "ky": "^1.2.0",
    "plausible-tracker": "0.3.8",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-google-recaptcha": "^3.1.0",
    "react-lite-youtube-embed": "2.4.0",
    "reading-time": "^1.5.0",
    "remix-image": "^1.4.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20240129.0",
    "@remix-run/dev": "2.5.0",
    "@tailwindcss/forms": "0.5.7",
    "@tailwindcss/typography": "0.5.10",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "7.0.3",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.32",
    "tailwindcss": "3.4.0",
    "typescript": "5.3.3",
    "wrangler": "3.22.1"
  },
  "engines": {
    "node": ">=18"
  }
}
